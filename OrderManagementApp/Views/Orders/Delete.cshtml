@model OrderManagementApp.Data.Entities.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h4>Delete Order</h4>
    <hr />
    <h5 class="text-danger">Are you sure you want to delete this order?</h5>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Order ID:</dt>
                <dd class="col-sm-8">@Model.OrderId</dd>
                
                <dt class="col-sm-4">Date:</dt>
                <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>
                
                <dt class="col-sm-4">Customer:</dt>
                <dd class="col-sm-8">@Model.CustomerName</dd>
                
                <dt class="col-sm-4">Amount:</dt>
                <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>
                
                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.StatusCode == 'C' ? "bg-danger" : "bg-info")">
                        @Model.Status?.StatusName
                    </span>
                </dd>
            </dl>
            
            <form asp-action="Delete" method="post" asp-controller="Orders">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Orders" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

